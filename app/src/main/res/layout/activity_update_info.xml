<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.UpdateInfoActivity">

    <TextView
        android:id="@+id/loggedInTxt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/studentIDEd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Student ID"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/firstnameEd2"
        app:layout_constraintStart_toStartOf="@+id/firstnameEd2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/firstnameEd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="First name"
        android:inputType="textPersonName"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/lastnameEd2"
        app:layout_constraintStart_toStartOf="@+id/lastnameEd2"
        app:layout_constraintTop_toBottomOf="@+id/studentIDEd2" />

    <EditText
        android:id="@+id/lastnameEd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Last name"
        android:inputType="textPersonName"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/departmentEd2"
        app:layout_constraintStart_toStartOf="@+id/departmentEd2"
        app:layout_constraintTop_toBottomOf="@+id/firstnameEd2" />

    <EditText
        android:id="@+id/departmentEd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Department"
        android:inputType="textPersonName"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/professorIDEd2"
        app:layout_constraintStart_toStartOf="@+id/professorIDEd2"
        app:layout_constraintTop_toBottomOf="@+id/lastnameEd2" />

    <EditText
        android:id="@+id/professorIDEd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Professor ID"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/classroomIDEd3"
        app:layout_constraintStart_toStartOf="@+id/classroomIDEd3"
        app:layout_constraintTop_toBottomOf="@+id/departmentEd2" />

    <EditText
        android:id="@+id/classroomIDEd3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Classroom ID"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/updateData"
        app:layout_constraintStart_toStartOf="@+id/updateData"
        app:layout_constraintTop_toBottomOf="@+id/professorIDEd2" />

    <Button
        android:id="@+id/updateData"
        android:layout_width="212dp"
        android:layout_height="55dp"
        android:onClick="UpdateData"
        android:text="Update"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classroomIDEd3" />

    <TextView
        android:id="@+id/sinfo"
        android:layout_width="182dp"
        android:layout_height="697dp"
        android:layout_marginStart="213dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="136dp"
        android:text="@string/professor_must_login_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>