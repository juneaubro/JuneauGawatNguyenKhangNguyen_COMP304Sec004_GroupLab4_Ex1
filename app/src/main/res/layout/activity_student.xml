<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.StudentActivity">

    <EditText
        android:id="@+id/studentIDEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Student ID"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/firstnameEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="First name"
        android:inputType="textPersonName"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/studentIDEd"
        app:layout_constraintTop_toBottomOf="@+id/studentIDEd" />

    <EditText
        android:id="@+id/lastnameEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Last name"
        android:inputType="textPersonName"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/firstnameEd"
        app:layout_constraintTop_toBottomOf="@+id/firstnameEd" />

    <EditText
        android:id="@+id/departmentIDEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Department"
        android:inputType="textPersonName"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/lastnameEd"
        app:layout_constraintTop_toBottomOf="@+id/lastnameEd" />

    <EditText
        android:id="@+id/professorIDEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Professor ID"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/departmentIDEd"
        app:layout_constraintTop_toBottomOf="@+id/departmentIDEd" />

    <EditText
        android:id="@+id/classroomIDEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Classroom ID"
        android:inputType="number"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/professorIDEd"
        app:layout_constraintTop_toBottomOf="@+id/professorIDEd" />

    <Button
        android:id="@+id/enterDataBtn"
        android:layout_width="212dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:onClick="EnterStudentInfo"
        android:text="@string/enter_data"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/classroomIDEd"
        app:layout_constraintTop_toBottomOf="@+id/classroomIDEd" />

    <Button
        android:id="@+id/viewDataBtn"
        android:layout_width="212dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:onClick="ViewStudentInfo"
        android:text="View Data"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/enterDataBtn"
        app:layout_constraintTop_toBottomOf="@+id/enterDataBtn" />

    <TextView
        android:id="@+id/stuinfo"
        android:layout_width="182dp"
        android:layout_height="697dp"
        android:layout_marginStart="213dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="136dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loggedInTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>